<html lang="en">
   <%- include('layouts/header'); -%>
   <body onload="init()">
      <%- include('layouts/heading'); -%>
      <%- include('layouts/navbar'); -%>

      <div class="main" >
         <h1>Bookyear Validation</h1>    
         <br><p>
         <textarea style="display:none;" id="items" ><%=typeof items !== "undefined" ? JSON.stringify(items) : ""%></textarea>                 
         <textarea style="display:none;" id="queryObj"><%=typeof queryObj !== "undefined" ? JSON.stringify(queryObj) : ""%></textarea>              
         <textarea style="display:none;" id="referenceData"><%=typeof referenceData !== "undefined" ? JSON.stringify(referenceData) : ""%></textarea>
         <textarea style="display:none;" id="errorRecord"><%=typeof errorRecord !== "undefined" ? JSON.stringify(errorRecord) : ""%></textarea>
         
         
         
         <div class="dashBoardFilter">
          <form>
               <div class="dashBoardButtons">            
                  <button id="pf" type="button"  onclick="refreshPage();">Refresh</button><br>
                  <button id="pf" type="button"  onclick="augmentPage();">Augment</button><br>
               </div>
               <label style="margin-left:10px;">Boekjaar: </label>                  
               <select   style="margin-right:50px;resize: none;" rows="1"  cols="20" id="dashBookYear"       placeholder="..." name="dashBookYear"       onchange="filterOnDate(0,1999999999999);"></select>
               <label style="margin-left:10px;">Begin Datum (dd-mm-jjj): </label>   
               <textarea style="margin-right:50px;resize: none;" rows="1"  cols="20" id="dashStartDate"      placeholder="..." name="dashStartDate"      onchange="filterOnDate(0,1999999999999);"></textarea>                                
               <label style="margin-left:10px;">Eind Datum (dd-mm-jjj): </label>    
               <textarea style="margin-right:50px;resize: none;" rows="1"  cols="20" id="dashEndDate"        placeholder="..." name="dashEndDate"        onchange="filterOnDate(0,1999999999999);"></textarea>
               <label style="margin-left:10px;">Grootboek rekening:</label>         
               <select   style="margin-right:50px;resize: none;" rows="1"  cols="20" id="dashledgerAccounts" placeholder="..." name="dashledgerAccounts" onchange="filterOnDate(0,1999999999999);"></select>
               <label style="margin-left:10px;">Bedrijven:</label>                  
               <select   style="margin-right:50px;resize: none;" rows="1"  cols="20" id="companies"          placeholder="..." name="companies"          onchange="filterOnDate(0,1999999999999);"></select>
          </form>
         </div>
         <div class='validationStats'>
            <h3>Validation Statistics</h3>
            <hr>
         </div>
         <div class='validationRecords'>              
            <div id='totalsRecords'></div>
            <hr>
            <div id='manageTotalsByLedger'></div>
            <hr>
            <div id='overviewRecords'></div>
            <hr>
            <div id='statementRecords'></div>
            <hr>
        </div>
      </div>
      <%- include('layouts/news'); -%>
      <%- include('layouts/footer'); -%>
      <script src="/js/zndDashboard.js"></script>      
      <script src="/js/index.js"></script>
   </body>
</html>